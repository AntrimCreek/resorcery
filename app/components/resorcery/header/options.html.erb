<% if collection %>
  <%= link_to new_polymorphic_path(model), class: 'btn btn-primary d-flex align-items-center' do %>
    <i class="bi bi-plus fs-5 lh-1 me-1"></i>
    New <%= model.name.titleize %>
  <% end %>
<% elsif ['new', 'create', 'edit', 'update'].include? action_name %>
  <%= link_to polymorphic_path(resource), class: 'btn btn-secondary text-nowrap ms-2' do %>
    Cancel
  <% end %>
<% elsif resource.present? %>
  <%= link_to edit_polymorphic_path(resource), class: 'btn btn-secondary text-nowrap ms-2' do %>
    <i class="bi bi-pencil fs-5 lh-1 me-1"></i>
    Edit <%= model.model_name.singular.titleize %>
  <% end %>
  <%= link_to polymorphic_path(resource), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-danger text-nowrap ms-2' do %>
    <i class="bi bi-trash fs-5 lh-1 me-1"></i>
    Delete <%= model.model_name.singular.titleize %>
  <% end %>
<% end %>
